// tag::all[]
{
// tag::develop[]
  "develop": {
    "frontend": {
      "path": "frontend",
      "port": 8080,
      "startCommand": "npm start"
    },
    "backend": {
        "path": "backend",
        "port": 3333,
        "startCommand": "npm run start-dev"
    }
  },
// end::develop[]
// tag::deploy[]
  "deploy": {
    "frontend": {
      "output": "frontend/build",
      "type": "static",
      "commands": [
        "cd frontend",
        "npm install",
        "export NODE_ENV=production && npm run build"
      ]
    },
    "backend": {
      "output": "backend",
      "type": "dynamic",
      "commands": [
        "cd backend",
        "npm install",
        "export NODE_ENV=production && npm run compile"
      ]
    }
  },
  // end::deploy[]
  // tag::remixData[]
  "remixData": {
    "backgroundColor": "#ffffff",
    "title": "My App"
  },
// end::remixData[]
// tag::initialTransform[]
  "@@initialTransform": {
    "remixData": {
      "title": "Name your App"
    }
  },
// end::initialTransform[]
// tag::entitlements[]
  "entitlements": {
    "InstantRemixing": true,
    "FeedEvents": true,
    "InstantRemixingNativeNavigation": true,
    "CustomMetadata": {
      "enabled": true,
      "metadata": {
        "title": "Default Title",
        "description": "{{remixData.title}}"
      }
    }
  }
// end::entitlements[]
}
// end::all[]
